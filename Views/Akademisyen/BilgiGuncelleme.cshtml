@{
    Layout = "AkademisyenLayout";
    model DersYonetimSistemi.Models.Entity.Akademisyen
}

<h2>Bilgilerinizi Güncelleyin</h2>

<form method="post">
    <div class="form-group">
        <label for="Ad">Ad</label>
        <input type="text" class="form-control" id="Ad" name="Ad" value="@Model.Ad" />
    </div>
    <div class="form-group">
        <label for="Soyad">Soyad</label>
        <input type="text" class="form-control" id="Soyad" name="Soyad" value="@Model.Soyad" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label for="Sifre">Şifre</label>
        <input type="password" class="form-control" id="Sifre" name="Sifre" value="@Model.Sifre" />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
