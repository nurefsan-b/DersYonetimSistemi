<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Ders Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Ders Yönetim Sistemi</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Anasayfa", "Akademisyen", new { AkademisyenId = Model?.AkademisyenID ?? 0 })">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("BilgiGuncelleme", "Akademisyen", new { AkademisyenId = Model?.AkademisyenID ?? 0 })">Bilgi Güncelle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DersIslemleri", "Akademisyen", new { AkademisyenId = Model?.AkademisyenID ?? 0 })">Ders İşlemleri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="text-muted">
        <div class="container">
            <p>&copy; 2024 - Ders Yönetim Sistemi</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>