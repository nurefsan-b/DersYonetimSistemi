@model DersYonetimSistemi.Models.Entity.Ogrenci

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - DersYonetimSistemi</title> <!-- Düzeltilmiş kısım -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DersYonetimSistemi.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DersYonetimSistemi</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                    <li class="nav-item"> 
                        <a class="nav-link" href="@Url.Action("DersSecimi", "Ogrenci", new { ogrenciId = Model.OgrenciID })">Ders Seçimi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("BilgiGuncelleme","Ogrenci", new { ogrenciId = Model.OgrenciID})">Bilgi Güncelle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Çıkış Yap</a>
                    </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DersYonetimSistemi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
