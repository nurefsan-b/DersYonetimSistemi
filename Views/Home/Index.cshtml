@{
    ViewData["Title"] = "Home Page";
    Layout="";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header style="background-color: #003366; padding: 20px 0; text-align: center;">
        <img src="~/images/university_logo.png" alt="Üniversite Logosu" style="width: 80px; height: auto;">
        <h1 style="color: white; display: inline-block; margin-left: 20px;">Ders Yönetim Sistemi</h1>
    </header>

    
    <div class="login-container" style="max-width: 400px; margin: 50px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px;">
        <h2 style="text-align: center;">Login</h2>
        <form method="post" style="display: flex; flex-direction: column;">
            <label for="Email">Email:</label>
            <input type="text" id="Email" name="Email" placeholder="Email" style="padding: 10px; margin-bottom: 15px; border-radius: 4px; border: 1px solid #ddd;" required />
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Password" style="padding: 10px; margin-bottom: 15px; border-radius: 4px; border: 1px solid #ddd;" required />
            
            <button type="submit" style="background-color: #003366; color: white; padding: 10px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;">Login</button>
    
           
        </form>
      
        

        @if (ViewBag.Error != null)
        {
            <p style="color: red; text-align: center;">@ViewBag.Error</p>
        }
    </div>
</body>
</html>

<style>
button {
    background-color: #003366;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s, transform 0.3s; /* Animasyon ekleniyor */
}

button:hover {
    background-color: #0055cc; /* Renk değişimi */
    transform: scale(1.1); /* Butonun büyümesi */
}
</style>